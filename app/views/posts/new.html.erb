<h2>Добавление нового поста</h2>
<%= form_for :post, url: posts_path do |f| %>
    <% if @post.errors.any? %>
        <% @post.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger"> <%= msg %> </div>
        <% end %>
    <% end %>
    <p>
        Название<br>
        <%= f.text_field :title %>
    </p>

    <p>
        Текст статьи<br>
        <%= f.text_area :dody %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>